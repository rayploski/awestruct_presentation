source 'https://rubygems.org'

gem 'awestruct', '~> 0.5.0'	# Framework for creating static HTML sites
gem 'uglifier', '~> 2.0.1'	# Ruby wrapper for UglifyJS JavaScript compressor
gem 'cssminify', '~> 1.0.2'	# CSS compression using YUI compressor
gem 'html_press', '~> 0.8.1'	# Compressing HTML
gem 'sass', '~> 3.2.9' # sass css processor
gem 'therubyracer', '~> 0.11.4'	# Call JavaScript code and manipulate JavaScript objects from Ruby and vice versa
gem 'rdiscount', '~> 2.0.7.2'	# Fast implementation of Gruber's Markdown in C

group :development do
  gem 'rb-inotify', :require => false
  gem 'rb-fsevent', :require => false
  gem 'rb-fchange', :require => false
  gem 'rake', '~> 10.0.4'
end
